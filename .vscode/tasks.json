{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "dotnet build",
         "command": "dotnet",
         "type": "process",
         "args": [
            "build",
            "${workspaceFolder}/backend/src/Todo.Api/Todo.Api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "dotnet publish",
         "command": "dotnet",
         "type": "process",
         "args": [
            "publish",
            "${workspaceFolder}/backend/src/Todo.Api/Todo.Api.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
         ],
         "problemMatcher": "$msCompile"
      },
      {
         "label": "dotnet watch",
         "command": "dotnet",
         "type": "process",
         "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/backend/src/Todo.Api/Todo.Api.csproj"
         ],
         "problemMatcher": "$msCompile"
      }
   ]
}